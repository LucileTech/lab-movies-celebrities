<ul>

  {{!-- {{#each myMovie}} --}}

  <li>
    <p>Titre : {{myMovie.title}}</p>
    <p>Genre : {{myMovie.genre}}</p>
    <p>Plot : {{myMovie.plot}}</p>

    {{#each myMovie.cast}}
      <p>Cast name : {{this.name}}</p>
      <p>Cast occupation : {{this.occupation}}</p>
      <p>Cast catch phrase : {{this.catchPhrase}}</p>
    {{/each}}
  </li>

  <form action="/movies/{{myMovie._id}}/delete" method="post">
    <button>Delete</button>
  </form>

